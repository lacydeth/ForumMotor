@page
@model ForumMotor_13BC_H.Pages.PostListModel

@{
    ViewData["Title"] = "PostList";
}

<h1>@Model.Category.Name/@Model.Topic.Name/PostList</h1>

<p>
    <a href="CreatePost?TopicId=@Model.TopicId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Reply)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reply)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.Id)
            </td>
            <td>
                <a href="/CreatePost?TopicId=@item.TopicId&PostId=@item.Id">Reply</a>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
